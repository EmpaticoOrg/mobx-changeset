{
  "name": "mobx-validations",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.main.js",
  "module": "dist/index.module.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/empaticoorg/mobx-changeset",
  "author": "andela-gogbara <godwin.onisofien@andela.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn clean && yarn compile && rollup -c && cp lib/*.d.ts dist",
    "compile": "yarn tsc",
    "problems": "yarn lint && yarn tsc  --noEmit",
    "lint": "tslint -c tslint.json \"src/**/*.ts\"",
    "clean": "rm -rf dist",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^21.1.8",
    "jest": "^21.2.1",
    "rollup": "^0.51.8",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-filesize": "^1.5.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "ts-jest": "^21.2.4",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1"
  },
  "dependencies": {
    "mobx": "^3.3.2"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js?|ts?)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  }
}
